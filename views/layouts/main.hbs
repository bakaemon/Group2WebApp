<body>

  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
          aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">
          FPT CMS
        </a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Dashboard</a></li>
          <li><a href="/admin/users">User Management</a></li>
          <li><a href="/admin/course">Course Management</a></li>
        </ul>
        {{#isdefined user}}
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#">Welcome, {{user.username}}</a></li>
          <li><a href="/auth/logout">Logout</a></li>
        </ul>
        {{else}}
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/auth/login">Login</a></li>
        </ul>
        {{/isdefined}}
      </div>
      <!--/.nav-collapse -->
    </div>
  </nav>

  <header id="header">
    <div class="container">
      <div class="row">
        <div class="col-md-10">
          <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> FPT CMS <small>Content Managenent</small>
          </h1>
        </div>
        <div class="col-md-2">
          <div class="dropdown create">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="true">
              Create Content
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><a type="button" data-toggle="modal" data-target="#addPage">Add Page</a></li>
              <li><a href="#">Add Post</a></li>
              <li><a href="#">Add User</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </header>

  <section id="breadcrumb">
    <div class="container">
      <ol class="breadcrumb">
        <li class="active">{{title}}</li>
      </ol>
    </div>
  </section>

  <section id="main">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="list-group">
            <a href="index.html" class="list-group-item active main-color-bg">
              <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
            </a>
            <a href="/admin/course" class="list-group-item"><span class="glyphicon glyphicon-pencil"
                aria-hidden="true"></span> Course <span class="badge">{{numsOfCourse}}</span></a>
            <a href="/admin/course/category" class="list-group-item"><span class="glyphicon glyphicon-list-alt"
                aria-hidden="true"></span> Course Category <span class="badge">{{numsOfCategory}}</span></a>
            <a href="/admin/users" class="list-group-item"><span class="glyphicon glyphicon-user"
                aria-hidden="true"></span> Users <span class="badge">{{numsOfUsers}}</span></a>
          </div>

          {{!-- <div class="well">
