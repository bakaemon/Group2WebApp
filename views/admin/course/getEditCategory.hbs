<div class="login-form">
    <form action="" method="post">
        <h2>User Management</h2>
        <hr>
        <div class="form-group">
            <p><small style="color: red;">{{message}}</small></p>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="category's name... "
                value="{{category.name}}" required>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="description" placeholder="Description" required>{{category.description}}</textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">Edit</button>
        </div>
    </form>
    <div class="hint-text">Go back to <a href="/admin/course/category">category control panel</a></div>
</div>