<script src="/assets/js/autocomplete.js"></script>
<div class="login-form">
    <form action="" method="post">
        <h2>Create Course</h2>
        <hr>
        <div class="form-group">{{message}}</div>
        <div  class="autocomplete">
            <div class="form-group">
                <input type="text" class="form-control" name="username" placeholder="Username" id="userauto" required>
            </div>
            
        </div>
        <div class="form-group">
            <select name="category" class="form-control">
                {{#each course}}
                <option value="{{_id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">Add</button>
        </div>
    </form>
    <div class="hint-text">Go back to <a href="/course/control">course control panel</a></div>
</div>
<script>
    var users = [
    {{#each user_data}}
    "{{username}}",
    {{/each}}
    ]
    autocomplete(document.getElementById("userauto"), users)
</script>