<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="show-entries">
                            <button class="btn btn-default dropdown-toggle"
                                    type="button"
                                    onclick="window.location.href='/admin/course/addcategory'">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <h2 class="text-center">Categories' <b>Details</b></h2>
                    </div>
                    <div class="col-sm-4">
                        <form action="" method="GET">
                            {{!-- <div class="search-box">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="material-icons">&#xE8B6;</i></span>
                                    <input type="text" class="form-control" placeholder="Search&hellip;"
                                        name="search_query">
                                </div>
                            </div> --}}
                        </form>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name <i class="fa fa-sort"></i></th>
                        <th>Description</th>
                        <th style="width: 12%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each category}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{description}}</td>
                        <td>
                            <div style="display: flex; justify-content: space-around; width: 60%">
                                <a href="/admin/course/edit_category?id={{_id}}" class="edit" title="Edit" data-toggle="tooltip"><i
                                    class="glyphicon glyphicon-pencil"></i></a>
                                <a href="javascript:deleteitem('{{_id}}')" class="delete" title="Delete"
                                   data-toggle="tooltip"><i class="glyphicon glyphicon-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
