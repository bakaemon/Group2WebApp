<div class="login-form">
    <form action="" method="post">
        <h2>User Management</h2>
        <hr>
        <div class="form-group">
            <p><small style="color: red;">{{message}}</small></p>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Course's name... "
                value="{{course.name}}" required>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="description" placeholder="Email"required>{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <select name="category" class="form-control" id="role">
                {{#each category}}
                <option value="{{_id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">Edit</button>
        </div>
    </form>
    <div class="hint-text">Go back to <a href="/admin/course">course control panel</a></div>
</div>
<script>
    $(document).ready(() => {
        $("select#role option[value={{{course.category._id}}}]").attr('selected', 'selected');
    });
</script>